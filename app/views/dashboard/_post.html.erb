<div class="flex flex-col pb-8 mt-4 border-b border-gray-500" data-controller="slides">
  <div class="w-full">
    <% post.post_contents.each.with_index do |post_content, i| %>
      <div data-slides-target="slide" class="pb-4">
        <p class="text-sm mb-1"> Slide <%= i + 1 %>/<%= post.post_contents.count %> </p>
        <%= render "posts/post_contents/#{post_content.content_type}", post_content: post_content %>
      </div>
    <% end %>
  </div>

  <div class="flex gap-2 items-center">
    <%= link_to "#", data: { action: "slides#previous" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
      </svg>
    <% end %>

    <%= link_to "#", data: { action: "slides#next" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
      </svg>
    <% end %>
  </div>

  <p> Posted by <%= post.user.username %> - <%= time_ago_in_words(post.created_at) %> ago </p>
</div>